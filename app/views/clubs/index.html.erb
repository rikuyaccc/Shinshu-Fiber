<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-4 offset-4">
      <%= paginate @clubs %>
    </div>
    <% @clubs.each do |club| %>
      <div class="col-4 offset-4 border shadow-sm py-2">
        <%= link_to club.name, club_path(club.id), class: "class-info" %>
      </div>
    <% end %>
    <div class="col-4 offset-4 my-3">
       <%= paginate @clubs %>
    </div>
  </div>
</div>  