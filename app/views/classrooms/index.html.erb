<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-6 offset-3">
      <%= paginate @classrooms %>
    </div>
    <% @classrooms.each do |classroom| %>
      <div class="col-6 offset-3 border shadow-sm py-2">
        <%= link_to "#{classroom.name}/#{classroom.term}/#{classroom.week}", classroom_path(classroom.id), class: "class-info" %>
      </div>
    <% end %>
    <div class="col-6 offset-3 my-3">
       <%= paginate @classrooms %>
    </div>
  </div>
</div>  