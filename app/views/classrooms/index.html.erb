<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xs-8 offset-xs-2">
      <%= paginate @classrooms %>
    </div>
    <div class="col-md-6 offset-md-3 my-2">
      <i class="fas fa-chevron-down"></i><span class="ml-2">授業一覧</span>
    </div>
    <% @classrooms.each do |classroom| %>
      <div class="col-md-6 offset-md-3 col-xs-8 offset-xs-2 border shadow-sm py-2">
        <%= link_to "#{classroom.name}/#{classroom.term}/#{classroom.week}", classroom_path(classroom.id), class: "class-info" %>
      </div>
    <% end %>
    <div class="col-md-6 offset-md-3 my-3">
       <%= paginate @classrooms %>
    </div>
  </div>
</div>  